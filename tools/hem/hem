#!/usr/bin/env python3
"""Light shim for the hem CLI that ensures the repository root
is available on `sys.path` when the script is invoked via a symlink.
"""
from pathlib import Path
import sys

# Resolve this file location (handles symlink target resolution)
this = Path(__file__).resolve()
# /.../norima/tools/hem/hem -> repo root is three parents up
repo_root = this.parents[3]
sys.path.insert(0, str(repo_root))

from tools.hem.cli import main


if __name__ == "__main__":
    raise SystemExit(main())
